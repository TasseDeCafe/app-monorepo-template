{
  "extends": "@yourbestaccent/typescript-config/nextjs.json",
  "compilerOptions": {
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@yourbestaccent/core/*": [
        "../../packages/core/src/*"
      ],
      "@yourbestaccent/i18n/locales/*": [
        "../../packages/i18n/locales/*"
      ],
      "@yourbestaccent/i18n/*": [
        "../../packages/i18n/src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
