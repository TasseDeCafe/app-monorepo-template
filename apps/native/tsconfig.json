{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    /* Linting */
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,

    "strict": true,
    "paths": {
      "@/*": ["./src/*"],
      "@template-app/api-client/*": ["../../packages/api-client/src/*"],
      "@template-app/core/*": ["../../packages/core/src/*"],
      "@template-app/i18n/locales/*": ["../../packages/i18n/locales/*"],
      "@template-app/i18n/*": ["../../packages/i18n/src/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts", "nativewind-env.d.ts"]
}
