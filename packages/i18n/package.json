{
  "name": "@template-app/i18n",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "exports": {
    "./locales/*": "./locales/*",
    "./*": "./src/*"
  },
  "scripts": {
    "build": "tsc && tsc-alias --project tsconfig.json",
    "check:types": "tsc --noEmit",
    "test:watch": "vitest watch",
    "lingui:extract": "bash -lc 'cd ../.. && lingui extract'",
    "lingui:watch": "bash -lc 'cd ../.. && lingui extract --watch'",
    "lingui:compile": "bash -lc 'cd ../.. && lingui compile'",
    "translate": "doppler run -- node scripts/translate-missing.mjs"
  },
  "devDependencies": {
    "@ai-sdk/anthropic": "catalog:",
    "@lingui/babel-plugin-lingui-macro": "catalog:",
    "@lingui/cli": "catalog:",
    "@vitejs/plugin-react": "catalog:",
    "@lingui/vite-plugin": "catalog:",
    "ai": "catalog:",
    "gettext-parser": "catalog:",
    "tsc-alias": "catalog:",
    "typescript": "catalog:",
    "@template-app/typescript-config": "workspace:*",
    "vite": "catalog:",
    "vitest": "catalog:",
    "zod": "catalog:"
  },
  "dependencies": {
    "@lingui/core": "catalog:",
    "@template-app/api-client": "workspace:*",
    "@template-app/core": "workspace:*"
  }
}
